    <table class="table table-hover">
      <thead>
        <th>Position</th>
        <th>Player</th>
      </thead>
      <tbody>
        <tr>
          <td>Top Overall</td>
          <td><%= Month.last.dlf_ranks.first.player.full_name %></td>
        </tr>
        <tr>
          <td>Top QB</td>
          <td><%= @top_qb.full_name %></td>
        </tr>
        <tr>
          <td>Top WR</td>
          <td><%= @top_wr.full_name %></td>
        </tr>
        <tr>
          <td>Top RB</td>
          <td><%= @top_rb.full_name %></td>
        </tr>
        <tr>
          <td>Top TE</td>
          <td><%= @top_te.full_name %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="col-md-4">
    <h3 class="text-center">Top 150 3 Month Rising</h3>
    <table class="table table-hover">
      <thead>
        <th>Player</th>
        <th>3 Month Trend</th>
        <th>Current ADP</th>
      </thead>
      <tbody>
        <% 5.times.each do |i| %>
        <tr>
          <td><%= @top_150[-(i + 1)][0] %></td>
          <td><%= @top_150[-(i + 1)][1] %></td>
          <td><%= @top_150[-(i + 1)][2] %></td>
