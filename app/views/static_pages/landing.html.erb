        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-md-4">
    <h3 class="text-center">Top 150 3 Month Falling</h3>
    <table class="table table-hover">
      <thead>
        <th>Player</th>
        <th>3 Month Trend</th>
        <th>Current ADP</th>
      </thead>
      <tbody>
        <% 5.times.each do |i| %>
        <tr>
          <td><%= @top_150[i][0] %></td>
          <td><%= @top_150[i][1] %></td>
          <td><%= @top_150[i][2] %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>

</div>