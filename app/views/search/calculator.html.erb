          <%= label_tag(:t2p1, "Player 1") %>
          <%= text_field_tag(:t2p1, nil,class: "form-control", list: "player-names") %>
        </div>

        <div class="form-group">
          <%= label_tag(:t2p2, "Player 2") %>
          <%= text_field_tag(:t2p2, nil,class: "form-control", list: "player-names") %>
        </div>

