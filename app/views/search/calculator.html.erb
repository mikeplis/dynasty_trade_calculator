          <%= label_tag(:t1p1, "Player 1") %>
          <%= text_field_tag(:t1p1, nil, class: "form-control") %>
        </div>

        <div class="form-group">
          <%= label_tag(:t1p2, "Player 2") %>
          <%= text_field_tag(:t1p2, nil,class: "form-control") %>
        </div>

        <div class="form-group">
          <%= label_tag(:t1p3, "Player 3") %>
          <%= text_field_tag(:t1p3, nil,class: "form-control") %>
        </div>

        <div class="form-group">
          <%= label_tag(:t1p4, "Player 4") %>
          <%= text_field_tag(:t1p4, nil,class: "form-control") %>
        </div>

        <div class="form-group">
          <%= label_tag(:t1p5, "Player 5") %>
          <%= text_field_tag(:t1p5, nil,class: "form-control") %>
        </div>
    </div>
    <div class="col-md-5">
        <h2>Team 2</h2>

        <div class="form-group">
          <%= label_tag(:t2p1, "Player 1") %>
          <%= text_field_tag(:t2p1, nil,class: "form-control") %>
        </div>

        <div class="form-group">
          <%= label_tag(:t2p2, "Player 2") %>
          <%= text_field_tag(:t2p2, nil,class: "form-control") %>
        </div>

        <div class="form-group">
          <%= label_tag(:t2p3, "Player 3") %>
          <%= text_field_tag(:t2p3, nil,class: "form-control") %>
        </div>

        <div class="form-group">
          <%= label_tag(:t2p4, "Player 4") %>
          <%= text_field_tag(:t2p4, nil,class: "form-control") %>
        </div>

        <div class="form-group">
          <%= label_tag(:t2p5, "Player 5") %>
          <%= text_field_tag(:t2p5, nil,class: "form-control") %>
        </div>

    </div>
    <div class="col-md-offset-3 col-md-6">
        <br>
        <%=submit_tag(value="Evaluate", class: "form-control") %>
        <% end %>
    </div>
</div>